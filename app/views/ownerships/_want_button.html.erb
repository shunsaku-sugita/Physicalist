<% if current_user.want?(item) %>
  <%= form_tag(ownership_path(item.id), method: :delete) do %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= hidden_field_tag :type, 'Want' %>
    <%= submit_tag 'Want List', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :jan_code, item.jan_code %>
    <%= hidden_field_tag :type, 'Want' %>
    <%= submit_tag 'Want List', class: 'btn btn-default' %>
  <% end %>
<% end %>
    