<div class="user-profile">
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
</div>
<div>
  <ul class="nav nav-tabs nav-justified">
    <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Want List <span class="badge"><%= @count_want %></span><% end %></li>
    <li class="<%= 'active' if current_page?(have_items_user_path(@user)) %>"><%= link_to have_items_user_path(@user) do %>My Shelf <span class="badge"><%= @count_have %></span><% end %></li>
  </ul>
</div>

<%= render 'items/items', items: @have_items %>